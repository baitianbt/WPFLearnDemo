<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="Solid4" Color="Green"/>
    <SolidColorBrush x:Key="Solid3" Color="Red"/>



    <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Arial"></Setter>
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="TextAlignment" Value="Center"></Setter>
    </Style>

    <Style x:Key="TextBlockStyleSon" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="FontSize" Value="16"></Setter>
    </Style>

    <Style x:Key="TextBlockStyleSonKey" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">

    </Style>
</ResourceDictionary>